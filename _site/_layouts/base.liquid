<!doctype html>
<html lang="en">
  <head>
      <meta charset="utf-8" />
          <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,user-scalable=yes" />

    <title>TWNSND Workshop Slow Site</title>
    <script>performance.mark("head_start")</script>
    {% if product %}
      <link rel="canonical" href="/products/{{ product.slug }}.html" />
    {% endif %}
    <meta name="robots" content="noindex,nofollow" />
    <meta name="description" content="A purposefully slow website for educational purposes">

      {% if product %}
        <!-- our preview LCP: -->
        <link rel="preload" as="image" fetchpriority="high" href="{{ product.images[0].preview_src }}?width=400&q=30" />
        <!-- optional: -->
        <link rel="preload" as="image" type="image/avif" imagesizes="(max-width: 800px) 100vw, 400px"
          imagesrcset="{{ product.images[0].src }}?fm=avif&q=50&width=800 400w, {{ product.images[0].src }}?fm=avif&q=50&width=1000 500w, {{ product.images[0].src }}?fm=avif&q=50&width=1000 600w"
        />
        <link rel="preload" as="image" type="image/webp" imagesizes="(max-width: 800px) 100vw, 400px"
          imagesrcset="{{ product.images[0].src }}?fm=webp&q=50&width=800 400w, {{ product.images[0].src }}?fm=webp&q=50&width=1000 500w, {{ product.images[0].src }}?fm=webp&q=50&width=1000 600w"
        />
      {% endif %}

    <script src="/scripts/cookies.js" type="module" async></script>

    <style>{% include "styles/fonts.css" %}</style>
    <style>{% include "styles/reset.css" %}</style>
    <style>{% include "styles/global.css" %}</style>
    <style>{% include "styles/cookies.css" %}</style>

    {% if product %}
      <style>{% include "styles/homepage.css" %}</style>
    {% else %}
      <style>{% include "styles/product-detail-page.css" %}</style>
    {% endif %}
  
    <script>performance.mark("head_end");performance.measure("head_duration", "head_start", "head_end")</script>
  </head>

  <body>
    <link rel="preload" as="font" type="font/woff2" href="/fonts/dm-serif-display/DMSerifDisplay-Regular.woff2" crossorigin />
    <link rel="preload" as="font" type="font/woff2" href="/fonts/inter-variable/Inter-Variable-Latin.woff2" crossorigin />
    <h1 class="logo">
      <a href="/"><img src="/images/logo.svg" width="482" height="119" fetchpriority="high" alt="Relic Seeker" elementtiming="logo" /></a>
    </h1>

    {{ content }}

    <div class="cookies" id="cookie-wrapper">
      <dialog-cookies>
        <dialog>
          <p>This site uses cookies to slow your experience.</p>
          <form method="dialog"><button type="submit">Close</button></form>
        </dialog>
      </dialog-cookies>
    </div>
  </body>
</html>
